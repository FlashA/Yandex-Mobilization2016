<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flash.mobilization2016.MainActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <!-- marginTop нужен для того, чтобы progress bar был вплотную к toolbar -->
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_updating"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:layout_marginTop="-7dp"
        android:visibility="visible"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_artists"
        android:layout_below="@+id/progressBar_updating"/>




</RelativeLayout>
